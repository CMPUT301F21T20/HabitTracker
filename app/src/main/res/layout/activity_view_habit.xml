<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    tools:context=".AddNewHabitActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_APL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/viewHabit_toolbar"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                app:title="View Habit"
                app:titleTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="56dp" />


                <ImageView
                    android:id="@+id/viewHabit_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/viewHabit_toolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white">

                </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="24dp"
        android:layout_marginBottom="132dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Habit Name"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Reasons"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Start Date"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Active Days"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewActiveDaysText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Shared"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewSharedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Streak"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewStreakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Longest Streak"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewLongestStreakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/editHabitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="Edit HABIT"
            android:textSize="18dp"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/addHabitEventBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="NEW HABIT EVENT"
            android:textSize="18dp"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>
