<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="24dp"
    tools:context=".AddNewHabitEventActivity">

    <LinearLayout
        android:id="@+id/LL1_addHabitEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Habit Name"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitTitle_habitEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Reasons"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitReason_habitEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Start Date"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewHabitDateText_habitEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Active Days"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/viewActiveDaysText_habitEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Not implemented yet..."
            android:textFontWeight="400"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2_addHabitEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL1_addHabitEvent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:paddingTop="30dp">
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL2_addHabitEvent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/addHabitEventCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Denote Completed"
            android:textSize="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo (Optional)"
                android:textColor="@color/black"
                android:textSize="16dp">
            </TextView>

            <ImageButton
                android:id="@+id/addPhotoBtn_fromCamera"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginRight="34dp"
                android:src="@drawable/ic_baseline_photo_camera_24">
            </ImageButton>

            <ImageButton
                android:id="@+id/addPhotoBtn_fromAlbum"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_photo_24">
            </ImageButton>
        </FrameLayout>

        <ImageView
            android:id="@+id/HabitImageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:background="#A9A9A9"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_photo_filter_24">
        </ImageView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location (Optional)"
                android:textColor="@color/black"
                android:textSize="16dp">
            </TextView>

            <ImageButton
                android:id="@+id/addLocationBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_location_on_24">
            </ImageButton>
        </FrameLayout>

        <EditText
            android:id="@+id/addLocation_editView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:hint="No location added yet..."
            android:maxLength="20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Comment (Optional)"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/addComment_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No comment added yet..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/addHabitSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="SAVE CHANGES"
            android:textSize="18dp" />

    </LinearLayout>
</RelativeLayout>