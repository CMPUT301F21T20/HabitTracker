<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:clipToPadding="false"
    tools:context=".AddNewHabitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habit Name" />=
        <EditText
            android:id="@+id/addHabitTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My Habit"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reasons" />
        <EditText
            android:id="@+id/addHabitReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descirbe your habit..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date" />

                <EditText
                    android:id="@+id/addHabitDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="yyyy-mm-dd"
                    android:editable="false"/>
            </LinearLayout>

            <Button
                android:id="@+id/addHabitDateButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="PICK DATE" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Days" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp" >

            <ToggleButton
                android:id="@+id/addHabitMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="MON"
                android:textOn="MON" />

            <ToggleButton
                android:id="@+id/addHabitTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="TUE"
                android:textOn="TUE" />

            <ToggleButton
                android:id="@+id/addHabitWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="WED"
                android:textOn="WED" />

            <ToggleButton
                android:id="@+id/addHabitThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="THU"
                android:textOn="THU" />

            <ToggleButton
                android:id="@+id/addHabitFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="FRI"
                android:textOn="FRI" />

            <ToggleButton
                android:id="@+id/addHabitSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="SAT"
                android:textOn="SAT" />

            <ToggleButton
                android:id="@+id/addHabitSun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="SUN"
                android:textOn="SUN" />
        </LinearLayout>

        <Switch
            android:id="@+id/addHabitLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Location" />

        <Switch
            android:id="@+id/addHabitDenoteDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denote Done" />

        <Switch
            android:id="@+id/addHabitCanShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decide Sharing" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/addHabitSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Add Habit" />

    </LinearLayout>

</RelativeLayout>
